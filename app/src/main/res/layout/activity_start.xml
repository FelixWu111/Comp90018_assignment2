<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/jungle3"
              tools:context="org.unimelb.BirdMigration.StartActivity"
              android:orientation="vertical"
              android:gravity="center">

    <ImageView
        android:layout_marginTop="0dp"
        android:layout_width="254dp"
        android:layout_height="120dp"
        android:background="@drawable/logo2" />

    <!--    -->
    <TextView
            android:id="@+id/locationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LocationLabel" />
    <TextView
            android:text="LocationInfo"
            android:id="@+id/locationInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <!--  BirdBtn   -->
    <Button
        android:id="@+id/birdBtn"
        android:layout_marginTop="10dp"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:background="@drawable/bird" />

    <Switch
        android:layout_marginTop="10dp"
        android:text="Motion Mode"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationSwitch"/>

    <Switch
        android:text="Light Mode"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lightSwitch" />


    <!-- Help -->
    <Button
        android:id="@+id/helpButton"
        android:layout_marginTop="50dp"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@drawable/help" />
    <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:alpha="0.9"
            android:background="@drawable/shadow"
            android:elevation="50dp"
            android:onClick="startGame"
            android:text="@string/button_start"
            android:typeface="monospace"
            app:backgroundTint="@null"/>



</LinearLayout>